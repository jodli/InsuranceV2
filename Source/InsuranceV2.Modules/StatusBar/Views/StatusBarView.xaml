<UserControl x:Class="InsuranceV2.Modules.StatusBar.Views.StatusBarView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:prism="http://prismlibrary.com/"             
             prism:ViewModelLocator.AutoWireViewModel="True">

    <Grid Background="RoyalBlue"
          Visibility="{Binding StatusBarVisibility, UpdateSourceTrigger=PropertyChanged}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>
        <Grid x:Name="InformationEmployee" 
              Grid.Column="0" 
              Visibility="{Binding EmployeeVisibility, UpdateSourceTrigger=PropertyChanged}">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <TextBlock Text="Mitarbeiter" 
                       Grid.Row="0"
                       FontSize="18" 
                       FontWeight="Bold"
                       Foreground="White"
                       Padding="5 5 5 5"
                       HorizontalAlignment="Left"/>
            <TextBlock x:Name="EmployeeName" 
                       Text="{Binding EmployeeName, UpdateSourceTrigger=PropertyChanged}" 
                       Grid.Row="1"
                       FontSize="14"
                       Foreground="White"
                       Padding="5 0 5 5"
                       HorizontalAlignment="Left"/>
        </Grid>
        <Grid x:Name="InformationContent" 
              Grid.Column="1">
            <TextBlock x:Name="ContentTitle" 
                       Text="{Binding TitleName, UpdateSourceTrigger=PropertyChanged}" 
                       HorizontalAlignment="Center" 
                       FontSize="32" 
                       FontWeight="Bold"
                       Foreground="White"
                       Padding="5 5 5 5"/>
        </Grid>
        <Grid x:Name="InformationClient" 
              Grid.Column="2" 
              Visibility="{Binding ClientVisibility, UpdateSourceTrigger=PropertyChanged}">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <TextBlock Text="Klient" 
                       Grid.Row="0"
                       FontSize="18" 
                       FontWeight="Bold"
                       Foreground="White"
                       Padding="5 5 5 5"
                       HorizontalAlignment="Right"/>
            <TextBlock x:Name="ClientName" 
                       Text="{Binding ClientName, UpdateSourceTrigger=PropertyChanged}" 
                       Grid.Row="1"
                       FontSize="14"
                       Foreground="White"
                       Padding="5 0 5 5"
                       HorizontalAlignment="Right" />
        </Grid>
    </Grid>
</UserControl>
